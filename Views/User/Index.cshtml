@model List<AppUser>
@{
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="User" class="d-inline-block my-2">Yeni kullanıcı ekle</a>
<table class="table table-hovered table-bordered table-sm">
    <thead>
        <tr>
            <th>Username</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Role Info</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Gender</td>
                <td>@user.Email</td>
                <td>
                    <getUserInfo user-id="@user.Id"></getUserInfo>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@user.Id">Rol Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>